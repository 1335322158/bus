/**index.wxss**/
@import "../../static/wxss/weui.wxss";
@import "../info/info.wxss";

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.next-bus {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name-route {
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  font-weight: 600;
  font-size: 20px;
}

.route {
  font-size: 16px;
}

.button-view {
  display: flex;
  align-items: center;
  margin-right: 3%;
}

/*picker*/

.picker {
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  box-shadow: 2px 2px 3px #00343f;
  padding: 8px;
  background-color: #fff;
}

.table {
  border-radius: 7px;
  width: 93%;
  align-content: center;
  vertical-align: center;
  margin-left: 3%;
  margin-bottom: 10px;
}

.avatar-bg {
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  box-shadow: 2px 2px 3px #00343f;
  background-color: #b3e2cd;
}

.avatar {
  display: flex;
  width: 93%;
  justify-content: space-between;
  margin-left: 3%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th {
  font-weight: 600;
  background: #fff;
  font-size: 17px;
}

.td {
  font-weight: 600;
  color: red;
  background: #f5f5f5;
}

.td1 {
  background: #fff;
}

.td2 {
  background: #f5f5f5;
}

.td-button {
  width: 100%;
  text-align: center;
}

.td, .td1, .td2 {
  font-size: 15px;
}

.th, .td, .td1, .td2 {
  padding: 10px;
  width: 100%;
  text-align: center;
}

/*******容器********/

.container {
  display: flex;
  flex-direction: column;
  width: 98%;
  margin: 0 auto;
}

.container > view {
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  background-color: #fefefe;
  box-shadow: 2px 2px 3px #00343f;
}
