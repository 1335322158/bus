.header {
  width: 200rpx;
  height: 200rpx;
  border: 2px solid;
  border-radius: 50%;
  margin: 80rpx auto;
  margin-bottom: 20rpx;
  display: block;
}

.tip {
  font-size: 40rpx;
  color: red;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loginPane {
  width: 500rpx;
  height: 250rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
}

.loginPane>view {
  flex: 1;
  display: flex;
  margin: 10rpx 0;
  border: 2px solid rgba(99, 223, 116, 0.007);
}

.navigator-img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15px;
}

.account {
  border-bottom: 1px solid;
  flex: 1;
}

.login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}
